@model List<Friend>
@{ 
    ViewBag.Title = "Friend Index";
}

   
    <div class="card-deck">
        @foreach (var friend in Model)
        {
            var rutaPhoto = "~/images/" + (friend.routePhoto ?? "an1.gif");
            <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@friend.Name</h3>
                </div>
                <img class="card-img-top imagen" src="@rutaPhoto" asp-append-version="true" />
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="details" asp-route-id=@friend.Id class="btn btn-primary">Show</a>
                    <a href="#" class="btn btn-primary">Ver</a>
                    <a href="#" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Borrar</a>
                </div>
            </div>
        }

    </div>
 